root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Indentation override for all MD
[*.md]
trim_trailing_whitespace = false

# Indentation override for all JS
[*.js]
quote_type = single

# Indentation override for all VUE
[*.vue]
quote_type = single

# Indentation override for all TS
[*.ts]
quote_type = single
